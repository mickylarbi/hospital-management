// prisma/schema.prisma
generator client {
    provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    // uncomment next line if you use Prisma <5.10
    // directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
    id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    name     String
    email    String @unique
    password String
    role     Role
}

enum Role {
    PATIENT
    DOCTOR
}
